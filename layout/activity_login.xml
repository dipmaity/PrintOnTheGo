<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/la_scroll_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:fillViewport="true"
    app:layout_constraintTop_toTopOf="parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/purple_500"
            android:orientation="vertical"
            android:id="@+id/la_ll_welcome"
            android:gravity="center"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/printing_freedom_anywhere_you_go"
                android:textColor="@color/white"
                android:textStyle="italic"
                android:textSize="15sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/la_til_email"
                android:hint="@string/email"
                android:layout_margin="@dimen/margin_all"
                android:background="@color/white"
                android:textColorHint="@color/black"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:id="@+id/la_et_email"
                    android:background="#C0BBF3"
                    android:textColor="@color/black"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/la_til_password"
                android:hint="@string/password"
                android:layout_marginTop="@dimen/margin_all"
                android:layout_marginRight="@dimen/margin_all"
                android:layout_marginLeft="@dimen/margin_all"
                app:passwordToggleEnabled="true"
                android:textColorHint="@color/black"
                app:passwordToggleTint="@color/black"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:id="@+id/la_et_password"
                    android:textColor="@color/black"
                    android:background="#C0BBF3"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:animateLayoutChanges="true"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/la_tv_forget_password"
                    android:text="@string/forget_password"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/margin_all"
                    android:textSize="15sp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/la_tv_register"
                    android:text="@string/sign_up"
                    android:textColor="@color/black"
                    android:layout_marginEnd="@dimen/margin_all"
                    android:textSize="15sp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/la_bt_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_all"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choose_another_option_for_login"
                android:textColor="@color/black"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:animateLayoutChanges="true"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                >
                <ImageView
                    android:id="@+id/la_iv_google"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:src="@drawable/google"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:id="@+id/la_iv_facebook"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@drawable/facebook"
                    />
                <ImageView
                    android:id="@+id/la_iv_github"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@drawable/github"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>